FROM node:18-alpine

WORKDIR /app

COPY package*.json ./
RUN npm install

COPY . .
RUN npm run build

# Install serve with cache-control support
RUN npm install -g serve

EXPOSE 3000

# Serve with NO CACHE headers
CMD ["serve", "-s", "build", "-l", "3000", "--no-clipboard", "--no-port-switching", \
     "--cors", \
     "-c", "serve.json"]
